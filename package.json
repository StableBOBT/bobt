{
  "name": "bobt",
  "version": "1.0.0",
  "private": true,
  "description": "BOBT Stablecoin - Professional-grade stablecoin on Stellar Soroban",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "check-types": "turbo run check-types",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "clean": "turbo run clean && rm -rf node_modules",
    "contracts:build": "stellar contract build",
    "contracts:test": "cargo test",
    "oracle:update": "pnpm --filter @bobt/price-updater run update-prices",
    "testnet:e2e": "node scripts/testnet-e2e.mjs",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.1.2",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "5.7.2",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  }
}
